{% extends 'HunterBackendBundle:layout:base.html.twig' %}

{% block page %}
    <h1>
        {{ 'backend.products.pages.edit'|trans({'%product%': product.name}) }}
        <div class="pull-right">
            {{ form_start(delete_form) }}
            <span class="btn-group">
                <a href="{{ path('hunter_backend_product_index') }}"
                   class="btn btn-info">{{ 'backend.layout.labels.to_list'|trans }}</a>
                <input type="submit" value="{{ 'backend.layout.labels.delete'|trans }}" class="btn btn-danger">
            </span>
            {{ form_end(delete_form) }}
        </div>
    </h1>

    {{ form_start(edit_form) }}
    {{ form_widget(edit_form) }}
    <input type="submit" value="{{ 'backend.layout.labels.save'|trans }}" class="btn btn-success"/>
    {{ form_end(edit_form) }}
    <br>
{% endblock %}
