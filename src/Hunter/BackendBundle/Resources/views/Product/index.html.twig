{% extends 'HunterBackendBundle:layout:base.html.twig' %}

{% block page %}
    <h1>
        {{ 'backend.products.pages.list'|trans }}
        <span class="btn-group pull-right">
            <a href="{{ path('hunter_backend_product_new') }}" class="btn btn-success">{{ 'backend.layout.labels.create'|trans }}</a>
        </span>
    </h1>

    <table class="table table-hover table-striped">
        <thead>
        <tr>
            <th>{{ 'backend.products.labels.id'|trans }}</th>
            <th>{{ 'backend.products.labels.name'|trans }}</th>
            <th>{{ 'backend.products.labels.slug'|trans }}</th>
            <th>{{ 'backend.products.labels.price'|trans }}</th>
            <th>{{ 'backend.products.labels.is_active'|trans }}</th>
            <th>{{ 'backend.products.labels.created_at'|trans }}</th>
            <th>{{ 'backend.products.labels.updated_at'|trans }}</th>
            <th class="text-right">{{ 'backend.layout.labels.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td><a href="{{ path('hunter_backend_product_show', { 'id': product.id }) }}">{{ product.id }}</a></td>
                <td><a href="{{ path('hunter_backend_product_show', { 'id': product.id }) }}">{{ product.name }}</a>
                </td>
                <td>{{ product.slug }}</td>
                <td>{{ (product.price / 100)|localizedcurrency('RUB') }}</td>
                <td>{% if product.isActive %}{{ 'backend.layout.labels.yes'|trans }}{% else %}{{ 'backend.layout.labels.no'|trans }}{% endif %}</td>
                <td>{% if product.createdAt %}{{ product.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if product.updatedAt %}{{ product.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <div class="btn-group pull-right">
                        <a href="{{ path('hunter_backend_product_show', { 'id': product.id }) }}" class="btn btn-info">{{ 'backend.layout.labels.show'|trans }}</a>
                        <a href="{{ path('hunter_backend_product_edit', { 'id': product.id }) }}" class="btn btn-success">{{ 'backend.layout.labels.edit'|trans }}</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
