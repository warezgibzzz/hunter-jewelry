{% extends '@HunterFrontend/layout/base.html.twig' %}
{% block content %}
    <aside id="fh5co-hero" class="js-fullheight">
        <div class="flexslider js-fullheight">
            <ul class="slides">
                {% for product in featured %}
                    <li style="background-image: url({{ asset('bundles/hunterfrontend/images/img_bg_' ~ loop.index ~ '.jpg') }});">
                        <div class="overlay-gradient"></div>
                        <div class="container">
                            <div class="col-md-6 col-md-offset-3 col-md-pull-3 js-fullheight slider-text">
                                <div class="slider-text-inner">
                                    <div class="desc">
                                        <span class="price">$800</span>
                                        <h2>{{ product.name }}</h2>
                                        <p>{{ product.description }}</p>
                                        <p>
                                            <a
                                                    href="{{ url('hunter_frontend_shop_product', {category_slug: product.category.slug, slug: product.slug}) }}"
                                                    class="btn btn-primary btn-outline btn-lg"
                                            >{{ 'frontend.index.featured.buy'|trans }}</a>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </aside>
    <div id="fh5co-product">
        <div class="container">
            <div class="row animate-box">
                <div class="col-md-8 col-md-offset-2 text-center fh5co-heading">
                    <h2>Новые продукты</h2>
                </div>
            </div>
            <div class="row">
                {% for product in recent %}
                    <div class="col-md-4 text-center animate-box">
                        <div class="product">
                            <div class="product-grid"
                                 style="background-image:url({{ asset('bundles/hunterfrontend/images/product-' ~ loop.index ~ '.jpg') }});">
                                <div class="inner">
                                    <p>
                                        <a href="#" class="icon"><i class="icon-shopping-cart"></i></a>
                                        <a href="{{ url('hunter_frontend_shop_product', {category_slug: product.category.slug, slug: product.slug}) }}" class="icon"><i class="icon-eye"></i></a>
                                    </p>
                                </div>
                            </div>
                            <div class="desc">
                                <h3><a href="{{ url('hunter_frontend_shop_product', {category_slug: product.category.slug, slug: product.slug}) }}">{{ product.name }}</a></h3>
                                <span class="price">$350</span>
                            </div>
                        </div>
                    </div>
                    {% if (loop.index % 3) == 0 %}
                        </div>
                        <div class="row">
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}